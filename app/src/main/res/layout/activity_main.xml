<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ListView
                android:id="@+id/main_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="60dp">


        </ListView>
        <TextView
                android:text="@string/lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lost"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="143dp" android:layout_marginStart="143dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="143dp"
                android:layout_marginRight="143dp" android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/main_listView" android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>